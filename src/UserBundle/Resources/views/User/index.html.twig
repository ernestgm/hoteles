<div ng-controller="UserController as uc">
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Administrar Usuario</h5>

                    {#<div ibox-tools></div>#}
                    <div class="ibox-tools">
                        <div class="text-right">
                            <div class="btn-group">
                                <a ui-sref="user.administrar.add" class="btn btn-sm btn-primary"> <i class="fa fa-user-plus"></i> {{ 'Adicionar nuevo usuario' | trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ibox-content clearfix">
                    {% verbatim %}
                        <table ng-table="uc.tableParams" show-filter="true" class="table table-striped table-bordered table-hover">
                           <tr ng-repeat="user in $data">
                               <td data-title="'Id'" sortable="'id'">{{ user.id }}</td>
                               <td data-title="'Nombre'" sortable="'name'" filter="{ 'name': 'text' }">{{ user.name }}</td>
                               <td data-title="'Apellidos'" sortable="'lastname'" filter="{ 'lastname': 'text' }">{{ user.lastname }}</td>
                               <td data-title="'Email'" sortable="'email'" filter="{ 'email': 'text' }">{{ user.email }}</td>
                               <td data-title="'Activo'" class="text-center">
                                    <div ng-switch on="'{{ user.enabled }}'">
                                        <a ng-switch-when="true" class="btn btn-success btn-xs btn-small"><i class="fa fa-check"></i></a>
                                        <a ng-switch-default class="btn btn-danger btn-xs btn-small"><i class="fa fa-times"></i></a>
                                    </div>
                               </td>
                               <td data-title="'Actions'" class="text-center">
                                        <div class="btn-group">
                                            <a ui-sref="user.administrar.edit({ id: user.id })" class="btn btn-primary btn-xs btn-small"><i class="fa fa-edit"></i></a>
                                            <a ng-click="uc.deleteUser(user.id)" title="" class="btn btn-danger btn-xs btn-small"><i class="fa fa-trash"></i></a>
                                        </div>
                               </td>
                            </tr>
                        </table>
                    {% endverbatim %}
                </div>
            </div>
        </div>
    </div>
</div>
    <div ui-view class="view-side-form"></div>
    {#<div id="newuser-form" class="wrapper wrapper-content hide animated fadeInRight">#}
        {#{{ include('UserBundle:User:modalAdd.html.twig') }}#}
    {#</div>#}
</div>




