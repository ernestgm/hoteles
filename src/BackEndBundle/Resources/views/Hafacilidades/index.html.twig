<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Facilidades de Habitacion</h5>

                    {#<div ibox-tools></div>#}
                </div>
                <div class="ibox-content">
                    {% verbatim %}
                        <table ng-controller="HafacilidadesController as haf" ng-table="haf.tableParams" show-filter="true" class="table table-striped table-bordered table-hover">
                           <tr ng-repeat="hafacilidades in $data">
                               <td data-title="'Id'" sortable="'id'">{{ hafacilidades.id }}</td>
                               <td data-title="'Icono'">{{ hafacilidades.icono }}</td>
                               <td data-title="'Imagen'">{{ hafacilidades.imagen }}</td>
                               <td data-title="'Actions'" >
                                        <ul>
                                            <li>
                                                <a href="">show</a>
                                            </li>
                                            <li>
                                                <a href="">edit</a>
                                            </li>
                                        </ul>
                               </td>
                            </tr>
                        </table>
                    {% endverbatim %}
                </div>
            </div>
        </div>
    </div>
</div>




