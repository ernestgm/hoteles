<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista de Comentarios</h5>

                    {#<div ibox-tools></div>#}
                </div>
                <div class="ibox-content">
{% verbatim %}
    <table ng-controller="CommentController as com" ng-table="com.tableParams" show-filter="true" class="table table-striped table-bordered table-hover">

    <tr ng-repeat="comments in $data">
       <td data-title="'Id'" >
           <a href="">{{ comments.id }}</a>
       </td>
       <td data-title="'Titulo'" sortable="'titulo'" filter="{ 'titulo': 'text' }">
       {{ comments.titulo }}
       </td>
       <td data-title="'Descripcion'" >
           {{ comments.descripcion }}
       </td>
       <td data-title="'Fecha'" filter="{ 'fecha': 'text' }">
           {{ comments.fecha }}
       </td>
       <td data-title="'Aprobado'">
           {{ comments.aprobado }}
       </td>
       <td data-title="'Actions'" >

                <ul>
                    <li>
                        <a href="">show</a>
                    </li>
                    <li>
                        <a href="">edit</a>
                    </li>
                </ul>

       </td>
    </tr>
        </tbody>
    </table>
    {% endverbatim %}
</div>
</div>
</div>
</div>
</div>