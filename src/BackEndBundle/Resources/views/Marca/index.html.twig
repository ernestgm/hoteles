<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Marca de Hoteles</h5>

                    {#<div ibox-tools></div>#}
                </div>
                <div class="ibox-content">
                    {% verbatim %}
                        <table ng-controller="MarcaController as mar" ng-table="mar.tableParams" show-filter="true" class="table table-striped table-bordered table-hover">
                           <tr ng-repeat="marca in $data">
                               <td data-title="'Id'" sortable="'id'">
                                   <a href="">{{ marca.id }}</a>
                               </td>
                               <td data-title="'Estilo'">
                                    {{ marca.estilo }}
                               </td>
                               <td data-title="'Hotel'" >
                                   {{ marca.hotelcodigo }}
                               </td>
                               <td data-title="'Actions'" >
                                        <ul>
                                            <li>
                                                <a href="">show</a>
                                            </li>
                                            <li>
                                                <a href="">edit</a>
                                            </li>
                                        </ul>
                               </td>
                            </tr>
                        </table>
                    {% endverbatim %}
                </div>
            </div>
        </div>
    </div>
</div>

