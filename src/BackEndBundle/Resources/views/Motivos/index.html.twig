<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Motivos de Hoteles</h5>

                    {#<div ibox-tools></div>#}
                </div>
                <div class="ibox-content">
                    {% verbatim %}
                        <table ng-controller="MotivosController as mot" ng-table="mot.tableParams" show-filter="true" class="table table-striped table-bordered table-hover">
                           <tr ng-repeat="motivos in $data">
                               <td data-title="'Id'" sortable="'id'">{{ motivos.id }}</td>
                               <td data-title="'Wsid'">{{ motivos.wsId }}</td>
                               <td data-title="'Descripcion'">{{ motivos.descripcion }}</td>
                               <td data-title="'Imagen'">{{ motivos.imagen }}</td>
                               <td data-title="'Orden'">{{ motivos.orden }}</td>
                               <td data-title="'Actions'" >
                                        <ul>
                                            <li>
                                                <a href="">show</a>
                                            </li>
                                            <li>
                                                <a href="">edit</a>
                                            </li>
                                        </ul>
                               </td>
                            </tr>
                        </table>
                    {% endverbatim %}
                </div>
            </div>
        </div>
    </div>
</div>


