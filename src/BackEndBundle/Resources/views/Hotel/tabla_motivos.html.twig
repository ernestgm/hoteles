<div class="ibox-content">
    <h2>{{ 'Motivos' | trans }}</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'Nombre' | trans }}</th>
            <th style="text-align:right">{{ 'Acciones' | trans }}</th>
        </tr>
        </thead>
        {% verbatim %}
        <tbody>
        <tr ng-repeat="motivos in ho.hotel.hotel_motivos">
            <td>{{ motivos.name }}</td>
            <td class="ibox-tools">
                <a href=""><i class="fa fa-cog"></i></a>
            </td>
        </tr>
        </tbody>
        {% endverbatim %}
    </table>
</div>
</div>