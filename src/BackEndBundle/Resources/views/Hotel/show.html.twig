{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Hotel</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Codigo</th>
                <td>{{ entity.codigo }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>Geolocalizacion</th>
                <td>{{ entity.geolocalizacion }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('hotel') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('hotel_edit', { 'id': entity.codigo }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
