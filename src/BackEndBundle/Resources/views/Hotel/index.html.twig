<div ng-controller="HotelController as hot">
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><i class="fa fa-building-o"></i> Lista de Hoteles</h5>

                    <div class="ibox-tools">
                        <div class="text-right">
                            <div class="btn-group">
                                <a ui-sref="hotel.administrar.add" class="btn btn-sm btn-primary"> <i class="fa fa-plus-square"></i> {{ 'Adicionar nuevo Hotel' | trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ibox-content clearfix">
                    {% verbatim %}
                        <table ng-table="hot.tableParams" show-filter="true" class="table table-striped table-bordered table-hover">
                           <tr ng-repeat="hotel in $data">
                               <td data-title="'Codigo'" sortable="'codigo'" filter="{ 'codigo': 'text' }">
                                   <a href="">{{ hotel.codigo }}</a>
                               </td>
                               <td data-title="'Url'">
                                    {{ hotel.url }}
                               </td>
                               <td data-title="'Geolocalizacion'" >
                                   {{ hotel.geolocalizacion }}
                               </td>
                               <td data-title="'Actions'" >
                                        <ul>
                                            <li>
                                                <a href="">show</a>
                                            </li>
                                            <li>
                                                <a href="">edit</a>
                                            </li>
                                        </ul>
                               </td>
                            </tr>
                        </table>
                    {% endverbatim %}
                </div>
            </div>
        </div>
    </div>
</div>
    <div ui-view class="view-side-form"></div>
</div>
