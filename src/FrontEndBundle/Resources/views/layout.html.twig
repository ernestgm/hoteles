</head>
<body id="page-top" class="gray-bg">

{% block navbar %}
    {{ include('FrontendBundle:layout:navbar.html.twig') }}
{% endblock %}
{% block carousel %}
    {{ include('FrontendBundle:layout:carousel.html.twig') }}
{% endblock %}
{% for message in app.session.flashbag.get('message_ok') %}
    <div class="alert alert-info">{{ message }}</div>
{% endfor %}
{% for message in app.session.flashbag.get('message_error') %}
    <div class="alert alert-error">{{ message }}</div>
{% endfor %}
{% block body %}
{% endblock %}
{% block footer %}
    {{ include('FrontendBundle:layout:footer.html.twig') }}
{% endblock %}

{% block javascripts %}

    {% javascripts
    '@FrontEndBundle/Resources/public/js/jquery-2.1.1.js'
    '@FrontEndBundle/Resources/public/js/bootstrap.min.js'
    '@FrontEndBundle/Resources/public/js/plugins/metisMenu/jquery.metisMenu.js'
    '@FrontEndBundle/Resources/public/js/plugins/slimscroll/jquery.slimscroll.min.js'
    '@FrontEndBundle/Resources/public/js/plugins/pace/pace.min.js'
    '@FrontEndBundle/Resources/public/js/plugins/wow/wow.min.js'
    '@FrontEndBundle/Resources/public/js/plugins/jquery-validation-1.14.0/dist/jquery.validate.js'
    '@FrontEndBundle/Resources/public/js/Footer/js/modernizr.custom.js'
    '@FrontEndBundle/Resources/public/js/Footer/js/boxlayout.js'
    '@FrontEndBundle/Resources/public/js/bootstrap-datepicker.js'
    '@FrontEndBundle/Resources/public/js/custom.js'
    '@FrontEndBundle/Resources/public/js/plugins/holdon/HoldOn.min.js'
    '@FrontEndBundle/Resources/public/js/shortcut.js'
    '@FrontEndBundle/Resources/public/js/plugins/jsTree/jstree.min.js'


    filter='?uglifyjs2'
    %}

    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        $(function () {
            Boxlayout.init();
        });
    </script>

    <script>

        $(document).ready(function () {

            $('body').scrollspy({
                target: '.navbar-fixed-top',
                offset: 80
            });

            // Page scrolling feature
            $('a.page-scroll').bind('click', function (event) {
                var link = $(this);
                if (link.attr('href') && link.attr('href').indexOf('/') == -1 && $(link.attr('href')).offset) {
                    $('html, body').stop().animate({
                        scrollTop: $(link.attr('href')).offset().top - 50
                    }, 500);

                    event.preventDefault();
                }
            });
        });

        var cbpAnimatedHeader = (function () {
            var docElem = document.documentElement,
                    header = document.querySelector('.navbar-default'),
                    didScroll = false,
                    changeHeaderOn = 100;

            function init() {
                window.addEventListener('scroll', function (event) {
                    if (!didScroll) {
                        didScroll = true;
                        setTimeout(scrollPage, 250);
                    }
                }, false);
            }

            function scrollPage() {
                var sy = scrollY();
                if (sy >= changeHeaderOn) {
                    $(header).addClass('navbar-scroll');
                    $('#logo1').addClass('hide');
                    $('#logo2').removeClass('hide');
                    /*     $('#home-link-1').removeClass('hide');
                     $('#home-link-2').removeClass('hide');
                     $('#home-link-3').removeClass('hide');
                     $('#home-link-4').removeClass('hide');
                     $('#home-link-5').removeClass('hide');*/

                }
                else {
                    $(header).removeClass('navbar-scroll');
                    $('#logo2').addClass('hide');
                    $('#logo1').removeClass('hide');
                    /*     $('#home-link-1').addClass('hide');
                     $('#home-link-2').addClass('hide');
                     $('#home-link-3').addClass('hide');
                     $('#home-link-4').addClass('hide');
                     $('#home-link-5').addClass('hide');*/
                }
                didScroll = false;
            }

            function scrollY() {
                return window.pageYOffset || docElem.scrollTop;
            }

            init();

        })();

        // Activate WOW.js plugin for animation on scrol
        new WOW().init();

    </script>

{% endblock %}
</body>
</html>
