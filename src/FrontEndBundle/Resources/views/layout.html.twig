    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}Home{% endblock %} | COMUNICATION</title>

    {% block stylesheets %}

        {% stylesheets
        '@FrontEndBundle/Resources/public/css/bootstrap.min.css'
        '@FrontEndBundle/Resources/public/font-awesome/css/font-awesome.min.css'
        '@FrontEndBundle/Resources/public/css/animate.css'
        '@FrontEndBundle/Resources/public/css/style.css'
        '@FrontEndBundle/Resources/public/js/Footer/css/component.css'
        '@FrontEndBundle/Resources/public/css/customfrontend.css'
        '@FrontEndBundle/Resources/public/css/plugins/holdon/HoldOn.min.css'
        '@FrontEndBundle/Resources/public/css/plugins/jsTree/style.min.css'
        filter='?uglifycss'

        %}
